{% comment %}
  Features Section - Converted from React/Tailwind
  Replaces: Features.tsx
{% endcomment %}

<section class="py-24 bg-gray-50" id="features">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-base text-[#0284c7] font-semibold tracking-wide uppercase">{{ section.settings.subheading }}</h2>
        <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          {{ section.settings.heading }}
        </p>
        <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
          {{ section.settings.description }}
        </p>
      </div>
  
      <div class="mt-20">
        <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10 lg:grid-cols-3">
          {% for block in section.blocks %}
            <div class="relative bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
              <div class="absolute flex items-center justify-center h-12 w-12 rounded-xl bg-[#0ea5e9] text-white">
                {% case block.settings.icon %}
                  {% when 'sparkles' %}
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path></svg>
                  {% when 'shield' %}
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>
                  {% when 'smartphone' %}
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                  {% when 'clock' %}
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  {% when 'activity' %}
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                  {% when 'cat' %}
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10a2 2 0 11-4 0 2 2 0 014 0zM10 14h4v1a1 1 0 01-1 1h-2a1 1 0 01-1-1v-1zM7 6l2 3h6l2-3M4 16c0 1.5 1 3 3 3h10c2 0 3-1.5 3-3"></path></svg>
                {% endcase %}
              </div>
              <div class="ml-16">
                <dt class="text-lg leading-6 font-medium text-gray-900">{{ block.settings.title }}</dt>
                <dd class="mt-2 text-base text-gray-500">{{ block.settings.description }}</dd>
              </div>
            </div>
          {% endfor %}
        </dl>
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Features Custom",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Features"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Smarter. Cleaner. Safer."
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Engineered with whisper-quiet motors and advanced sensors to provide the ultimate experience for you and your cat."
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Feature",
        "settings": [
          {
            "type": "select",
            "id": "icon",
            "label": "Icon",
            "options": [
              { "value": "sparkles", "label": "Sparkles (Clean)" },
              { "value": "shield", "label": "Shield (Safety)" },
              { "value": "smartphone", "label": "Smartphone (App)" },
              { "value": "clock", "label": "Clock (Time)" },
              { "value": "activity", "label": "Activity (Health)" },
              { "value": "cat", "label": "Cat (Multi-cat)" }
            ],
            "default": "sparkles"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Feature Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Feature description goes here."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Features Custom",
        "blocks": [
          { "type": "feature", "settings": { "icon": "sparkles", "title": "Self-Cleaning Tech", "description": "Automatically separates waste from clean litter minutes after your cat leaves." }},
          { "type": "feature", "settings": { "icon": "shield", "title": "Odor Neutralization", "description": "Sealed waste drawer with carbon filters ensures your home smells fresh." }},
          { "type": "feature", "settings": { "icon": "smartphone", "title": "App Connected", "description": "Track usage habits, weight trends, and get notifications when the drawer is full." }},
          { "type": "feature", "settings": { "icon": "clock", "title": "Save Time", "description": "Never scoop again. Just empty the waste drawer once every 2 weeks." }},
          { "type": "feature", "settings": { "icon": "activity", "title": "Health Monitoring", "description": "Detects irregularities in bathroom habits early to keep your kitty healthy." }},
          { "type": "feature", "settings": { "icon": "cat", "title": "Multi-Cat Friendly", "description": "Perfect for households with up to 4 cats. Recognizes cats by weight." }}
        ]
      }
    ]
  }
  {% endschema %}