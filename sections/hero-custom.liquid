{% comment %}
  Hero Section - Converted from React/Tailwind
  Original: PurrfectClean Hero.tsx
{% endcomment %}

<script src="https://cdn.tailwindcss.com" defer></script>

<style>
  /* Custom Brand Colors from your Vercel Project */
  :root {
    --brand-50: #f0f9ff;
    --brand-100: #e0f2fe;
    --brand-500: #0ea5e9;
    --brand-600: #0284c7;
    --brand-700: #0369a1;
  }
</style>

<section class="relative overflow-hidden bg-white pt-16 pb-20 lg:pt-24 lg:pb-28">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8 items-center">
      
      <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
        
        <div class="inline-flex items-center px-3 py-1 rounded-full bg-[#f0f9ff] text-[#0284c7] text-sm font-medium mb-6 border border-[#e0f2fe]">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="#0284c7" stroke="#0284c7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
          {{ section.settings.badge_text }}
        </div>
        
        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl">
          <span class="block xl:inline">{{ section.settings.heading_line_1 }}</span>
          <span class="block text-[#0284c7] xl:inline">{{ section.settings.heading_line_2 }}</span>
        </h1>
        
        <p class="mt-4 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
          {{ section.settings.description }}
        </p>

        <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
          <div class="flex flex-col sm:flex-row gap-4 items-center sm:justify-center lg:justify-start">
            <a href="{{ section.settings.button_link }}" class="w-full sm:w-auto px-8 py-4 border border-transparent text-base font-medium rounded-full text-white bg-[#0284c7] hover:bg-[#0369a1] md:text-lg md:px-10 shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1">
              {{ section.settings.button_text }}
            </a>
            <div class="text-center sm:text-left">
              <p class="text-2xl font-bold text-gray-900">{{ section.settings.price }}</p>
              <p class="text-sm text-gray-500 line-through">{{ section.settings.old_price }}</p>
            </div>
          </div>
          
          <div class="mt-4 flex flex-col sm:flex-row items-center sm:justify-center lg:justify-start gap-y-2 gap-x-6 text-sm text-gray-500">
            {% for block in section.blocks %}
              <span class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500 mr-1"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {{ block.settings.benefit_text }}
              </span>
            {% endfor %}
          </div>
        </div>
      </div>

      <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center">
        <div class="relative mx-auto w-full rounded-3xl shadow-2xl lg:max-w-md overflow-hidden group">
          <div class="relative block w-full bg-gray-100 overflow-hidden aspect-[4/3]">
            {% if section.settings.hero_image != blank %}
              {{ section.settings.hero_image | image_url: width: 800 | image_tag: 
                class: 'absolute inset-0 w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700',
                loading: 'eager',
                alt: section.settings.heading_line_1 
              }}
            {% else %}
               {{ 'product-1' | placeholder_svg_tag: 'absolute inset-0 w-full h-full object-cover text-gray-300' }}
            {% endif %}
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
          </div>
          
          <div class="absolute bottom-6 left-6 bg-white/95 backdrop-blur-sm p-4 rounded-xl shadow-lg border border-gray-100 max-w-xs">
             <div class="flex items-center space-x-3">
               <div class="bg-green-100 p-2 rounded-full">
                 <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600"><polyline points="20 6 9 17 4 12"></polyline></svg>
               </div>
               <div>
                 <p class="text-xs text-gray-500 uppercase font-semibold">Status</p>
                 <p class="text-sm font-bold text-gray-800">Self-Cleaning Active</p>
               </div>
             </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Custom",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "#1 Rated Smart Litter Box of 2025"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading Line 1",
      "default": "Never Scoop Again."
    },
    {
      "type": "text",
      "id": "heading_line_2",
      "label": "Heading Line 2",
      "default": "The Future of Cat Care."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "The PurrfectClean Ultra automatically cleans, neutralizes odors, and tracks your cat's health."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Get Yours Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "price",
      "label": "Current Price",
      "default": "$499.00"
    },
    {
      "type": "text",
      "id": "old_price",
      "label": "Old Price",
      "default": "$699.00"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "benefit_text",
          "label": "Benefit Text",
          "default": "Free Shipping"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Custom",
      "blocks": [
        { "type": "benefit", "settings": { "benefit_text": "Free Shipping" } },
        { "type": "benefit", "settings": { "benefit_text": "90-Day Guarantee" } },
        { "type": "benefit", "settings": { "benefit_text": "1-Year Warranty" } }
      ]
    }
  ]
}
{% endschema %}