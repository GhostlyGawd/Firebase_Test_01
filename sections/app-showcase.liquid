{% comment %}
  App Showcase Section - Converted from React/Tailwind
  Replaces: ProductShowcase.tsx
{% endcomment %}

<section class="py-24 bg-white overflow-hidden">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="relative lg:grid lg:grid-cols-2 lg:gap-24 lg:items-center">
        
        <div class="relative">
          <h3 class="text-2xl font-extrabold text-gray-900 tracking-tight sm:text-3xl">
            {{ section.settings.heading }}
          </h3>
          <p class="mt-3 text-lg text-gray-500">
            {{ section.settings.description }}
          </p>
  
          <dl class="mt-10 space-y-10">
            {% for block in section.blocks %}
              <div class="relative">
                <dt>
                  <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-[#0ea5e9] text-white">
                    {% case block.settings.icon %}
                      {% when 'smartphone' %}
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                      {% when 'wifi' %}
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path></svg>
                      {% when 'zap' %}
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                    {% endcase %}
                  </div>
                  <p class="ml-16 text-lg leading-6 font-medium text-gray-900">{{ block.settings.title }}</p>
                </dt>
                <dd class="mt-2 ml-16 text-base text-gray-500">
                  {{ block.settings.text }}
                </dd>
              </div>
            {% endfor %}
          </dl>
        </div>
  
        <div class="mt-10 -mx-4 relative lg:mt-0" aria-hidden="true">
          <div class="relative mx-auto rounded-3xl shadow-2xl overflow-hidden bg-gray-900 aspect-[9/16] max-w-[320px]">
             <div class="absolute inset-0 bg-gray-800 flex flex-col">
                <div class="h-8 bg-gray-900 flex justify-between px-4 items-center text-white text-xs">
                  <span>9:41</span>
                  <div class="flex space-x-1">
                    <div class="w-3 h-3 bg-white rounded-sm"></div>
                    <div class="w-3 h-3 bg-white rounded-sm"></div>
                  </div>
                </div>
                
                <div class="flex-1 p-6 text-white bg-gradient-to-b from-gray-800 to-gray-900">
                  <div class="flex justify-between items-center mb-8">
                     <h2 class="font-bold text-xl">My Devices</h2>
                     <div class="w-8 h-8 bg-[#0ea5e9] rounded-full flex items-center justify-center font-bold">L</div>
                  </div>
  
                  <div class="bg-gray-700/50 rounded-2xl p-6 mb-6 border border-gray-600">
                     <div class="flex justify-between items-start mb-4">
                       <div>
                         <p class="text-gray-400 text-sm">Status</p>
                         <p class="text-green-400 font-medium flex items-center"><span class="w-2 h-2 bg-green-400 rounded-full mr-2"></span> Ready</p>
                       </div>
                       <div class="text-right">
                         <p class="text-gray-400 text-sm">Waste Level</p>
                         <p class="text-white font-medium">15%</p>
                       </div>
                     </div>
                     <div class="w-full bg-gray-600 h-2 rounded-full overflow-hidden">
                       <div class="bg-green-500 h-full w-[15%]"></div>
                     </div>
                  </div>
  
                  <div class="bg-gray-700/50 rounded-2xl p-6 border border-gray-600">
                     <p class="text-gray-400 text-sm mb-4">Recent Activity</p>
                     <div class="space-y-4">
                       <div class="flex justify-between items-center text-sm">
                         <span>Cleaning Cycle</span>
                         <span class="text-gray-400">10m ago</span>
                       </div>
                       <div class="flex justify-between items-center text-sm">
                         <span>Cat Detected (Luna)</span>
                         <span class="text-gray-400">15m ago</span>
                       </div>
                        <div className="flex justify-between items-center text-sm">
                         <span>Drawer Emptied</span>
                         <span className="text-gray-400">2d ago</span>
                       </div>
                     </div>
                  </div>
  
                  <div class="mt-8 flex justify-center">
                     <button class="bg-[#0284c7] w-full py-3 rounded-xl font-semibold shadow-lg shadow-brand-500/20">Cycle Now</button>
                  </div>
  
                </div>
             </div>
          </div>
          
          <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-[#0ea5e9]/20 rounded-full blur-3xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "App Showcase",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Control from Anywhere"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "The PurrfectClean App gives you total control. Monitor usage, start a cleaning cycle, or check waste levels from your office or vacation spot."
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "App Feature",
        "settings": [
          {
            "type": "select",
            "id": "icon",
            "label": "Icon",
            "options": [
              { "value": "smartphone", "label": "Smartphone" },
              { "value": "wifi", "label": "WiFi" },
              { "value": "zap", "label": "Zap (Insights)" }
            ],
            "default": "smartphone"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Real-time Notifications"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text",
            "default": "Get notified when the drawer is full or if any safety sensors are triggered."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "App Showcase",
        "blocks": [
          { "type": "feature", "settings": { "icon": "smartphone", "title": "Real-time Notifications", "text": "Get notified when the drawer is full or if any safety sensors are triggered." }},
          { "type": "feature", "settings": { "icon": "wifi", "title": "Wi-Fi Connected", "text": "Connects seamlessly to your 2.4GHz home network for reliable updates." }},
          { "type": "feature", "settings": { "icon": "zap", "title": "Insights Dashboard", "text": "Track your cat's weight and bathroom frequency to spot health issues early." }}
        ]
      }
    ]
  }
  {% endschema %}