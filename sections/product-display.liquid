{% comment %}
  Product Display Section - Converted from React/Tailwind
  Replaces: ProductDisplay.tsx
{% endcomment %}

{% assign product = all_products[section.settings.selected_product] %}
{% if product == blank %}
  {% assign title = "PurrfectClean Ultra" %}
  {% assign price = 49900 %}
  {% assign compare_at_price = 69900 %}
  {% assign description = "Experience the future of pet care. Designed for modern homes, it automatically separates waste and eliminates odors." %}
{% else %}
  {% assign title = product.title %}
  {% assign price = product.price %}
  {% assign compare_at_price = product.compare_at_price %}
  {% assign description = product.description | strip_html | truncatewords: 30 %}
{% endif %}

<section class="bg-white pt-6 pb-16 lg:pt-12 lg:pb-24 font-sans text-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-x-12 xl:gap-x-16">
      
      <div class="flex flex-col space-y-4">
        <div class="aspect-square w-full rounded-2xl overflow-hidden bg-gray-50 border border-gray-100 relative group">
          {% if product.featured_image %}
            {{ product.featured_image | image_url: width: 1000 | image_tag: 
              id: 'MainImage',
              class: 'w-full h-full object-cover object-center transform group-hover:scale-105 transition-transform duration-500',
              alt: title
            }}
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover text-gray-300' }}
          {% endif %}
          
          <div class="absolute top-4 left-4 bg-[#0284c7] text-white px-3 py-1 rounded-full text-sm font-medium shadow-md">
            Best Seller
          </div>
        </div>

        <div class="grid grid-cols-4 gap-4">
          {% if product.images.size > 0 %}
            {% for image in product.images limit: 4 %}
              <button onclick="changeImage('{{ image | image_url: width: 1000 }}', this)" class="thumbnail-btn relative aspect-square rounded-xl overflow-hidden bg-gray-50 border-2 {% if forloop.first %}border-[#0284c7] ring-2 ring-[#e0f2fe]{% else %}border-transparent hover:border-gray-200{% endif %} transition-all">
                {{ image | image_url: width: 200 | image_tag: class: 'w-full h-full object-cover' }}
              </button>
            {% endfor %}
          {% else %}
             {% for i in (1..4) %}
               <div class="aspect-square rounded-xl bg-gray-100"></div>
             {% endfor %}
          {% endif %}
        </div>
      </div>

      <div class="mt-10 px-0 sm:mt-16 sm:px-0 lg:mt-0">
        <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">{{ title }}</h1>

        <div class="mt-4 flex items-center cursor-pointer hover:opacity-80 transition-opacity">
          <div class="flex items-center text-yellow-400">
            {% for i in (1..5) %}
              <svg class="h-5 w-5 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            {% endfor %}
          </div>
          <p class="ml-3 text-sm text-gray-500 font-medium">4.9 (1,240 Reviews)</p>
        </div>

        <div class="mt-6 flex items-baseline space-x-3">
          <p class="text-4xl font-extrabold text-gray-900">{{ price | money }}</p>
          {% if compare_at_price > price %}
            <p class="text-xl text-gray-400 line-through">{{ compare_at_price | money }}</p>
            <span class="text-green-700 font-bold text-xs uppercase tracking-wide bg-green-100 px-2 py-1 rounded-md">
              Save {{ compare_at_price | minus: price | money_without_trailing_zeros }}
            </span>
          {% endif %}
        </div>

        <div class="mt-6 space-y-6">
          <p class="text-base text-gray-600 leading-relaxed">{{ description }}</p>
        </div>

        <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2">
           <div class="flex items-center text-sm text-gray-600">
              <svg class="h-5 w-5 text-[#0ea5e9] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" /></svg>
              Free 2-Day Shipping
           </div>
           <div class="flex items-center text-sm text-gray-600">
              <svg class="h-5 w-5 text-[#0ea5e9] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
              1-Year Warranty Included
           </div>
        </div>

        <div class="mt-10 border-t border-gray-100 pt-10">
          {% if product != blank %}
            {% form 'product', product %}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              
              <div class="flex items-center justify-between mb-6">
                <span class="text-sm font-medium text-gray-900">Quantity</span>
                <div class="flex items-center border border-gray-300 rounded-lg">
                  <button type="button" onclick="adjustQty(-1)" class="p-3 hover:bg-gray-50 text-gray-600 transition-colors rounded-l-lg">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" /></svg>
                  </button>
                  <input type="number" id="Quantity" name="quantity" value="1" min="1" class="w-12 text-center border-none p-0 text-gray-900 font-medium focus:ring-0">
                  <button type="button" onclick="adjustQty(1)" class="p-3 hover:bg-gray-50 text-gray-600 transition-colors rounded-r-lg">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>
                  </button>
                </div>
              </div>

              <button
                type="submit"
                {% unless product.available %}disabled{% endunless %}
                class="w-full bg-[#0284c7] border border-transparent rounded-full py-4 px-8 flex items-center justify-center text-base font-bold text-white hover:bg-[#0369a1] shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 active:scale-95 disabled:bg-gray-300 disabled:cursor-not-allowed"
              >
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
                {% if product.available %}Add to Cart{% else %}Sold Out{% endif %}
              </button>
            {% endform %}
          {% else %}
            <div class="flex items-center justify-between mb-6">
                <span class="text-sm font-medium text-gray-900">Quantity</span>
                <div class="flex items-center border border-gray-300 rounded-lg">
                  <button type="button" class="p-3 hover:bg-gray-50 text-gray-600 rounded-l-lg"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" /></svg></button>
                  <input type="number" value="1" disabled class="w-12 text-center border-none p-0 text-gray-900 font-medium focus:ring-0">
                  <button type="button" class="p-3 hover:bg-gray-50 text-gray-600 rounded-r-lg"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg></button>
                </div>
             </div>
            <button type="button" class="w-full bg-[#0284c7] border border-transparent rounded-full py-4 px-8 flex items-center justify-center text-base font-bold text-white hover:bg-[#0369a1] shadow-lg">
              <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
              Add to Cart
            </button>
          {% endif %}

          <div class="mt-4 flex justify-center items-center space-x-2 text-xs text-gray-500">
            <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
            <p>High demand! Only 14 units left in stock.</p>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<script>
  function changeImage(src, btn) {
    document.getElementById('MainImage').src = src;
    document.getElementById('MainImage').srcset = ""; // clear srcset to force src usage
    
    // Reset borders
    document.querySelectorAll('.thumbnail-btn').forEach(el => {
      el.classList.remove('border-[#0284c7]', 'ring-2', 'ring-[#e0f2fe]');
      el.classList.add('border-transparent');
    });
    
    // Highlight clicked
    btn.classList.remove('border-transparent');
    btn.classList.add('border-[#0284c7]', 'ring-2', 'ring-[#e0f2fe]');
  }

  function adjustQty(amount) {
    const input = document.getElementById('Quantity');
    const newVal = parseInt(input.value) + amount;
    if (newVal >= 1) input.value = newVal;
  }
</script>

{% schema %}
{
  "name": "Product Display",
  "settings": [
    {
      "type": "product",
      "id": "selected_product",
      "label": "Choose Product to Display"
    }
  ],
  "presets": [
    {
      "name": "Product Display"
    }
  ]
}
{% endschema %}